@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="login_box">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <form id="account" method="post" class="w-100">
        @*<h4>Use a local account to log in.</h4>*@
        <hr  class="text-white"/>
        
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group text-center">
            <button type="submit" class="btn custom-button bg-fourth">Log in</button>
        </div>

        <div class="form-group">
            <p>
                <a class="font-weight-bold text-white" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a class="font-weight-bold text-white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </p>
            <p>
                <a class="font-weight-bold text-white" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email
                    confirmation</a>
            </p>
        </div>
    </form>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
