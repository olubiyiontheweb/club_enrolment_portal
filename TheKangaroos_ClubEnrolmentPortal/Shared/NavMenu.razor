<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Club Enrollment Portal</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="event">
                <span class="oi oi-star" aria-hidden="true"></span> Event
            </NavLink>
        </li>
        
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="event-list">
                <span class="oi oi-star" aria-hidden="true"></span> Event List
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="club">
                <span class="oi oi-heart" aria-hidden="true"></span> Club
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="club-list">
                <span class="oi oi-heart" aria-hidden="true"></span> Club List
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
