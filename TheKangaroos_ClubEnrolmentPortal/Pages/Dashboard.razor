@page "/dashboard"

<div class="row">
    <div class="col-12 col-xl-9">
        <h3 class="font-weight-bold text-secondary">Dashboard</h3>
        <hr>
        <div class="club-news">
            <h4 class="font-weight-bold text-secondary mb-3">Latest Club News</h4>
            <div class="row">
                @foreach (var item in news)
                {
                    <div class="col-6 col-lg-3">
                        <div class="card mb-3 p-3">
                            <h5>@item.Title</h5>
                            <p class="mb-0">
                                @item.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr>
        <div class="events">
            <h4 class="font-weight-bold text-secondary mb-3">Upcoming Events</h4>
            <div class="row">
                @foreach (var item in events)
                {
                    <EventItem Title="@item.Title" Date="@item.Date" Location="@item.Location" ImageUrl="@item.ImageUrl" Price="@item.Price"/>
                }
            </div>
        </div>

    </div>
    <div class="col-12 col-xl-3">
        <div class="dashboard-right bg-fifth-color-light shadow p-3">
            <div class="event-list">
                <h5 class="text-center font-weight-bold text-secondary mb-3">My Events</h5>
                @if (events.Count !=0)
                {
                    @foreach (var item in events)
                        {
                            <div class="p-2 event-card mb-3">
                                <div class="event-date">
                                    <h4 class="mb-0">@item.Date.Day</h4>
                                    <p class="mb-0">@item.Date.ToString("MMM")</p>
                                </div>
                                <div class="event-detail">
                                    <p class="mb-1 font-weight-bold">@item.Title</p>
                                    <p class="mb-0">@item.Location</p>
                                </div>
                            </div>
                        }
                }
                else{
                    <p class="text-center">You are not registered for any event.</p>
                }
                
                <div class="text-center mt-3">View All Events</div>
            </div>
        </div>
    </div>
</div>

