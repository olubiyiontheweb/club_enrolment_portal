@page
@model TheKangaroos_ClubEnrolmentPortal.Pages.Notices.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].isAnnouncement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].isEnquiry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].CreatedByClub)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].CreatedByUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAnnouncement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isEnquiry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByClub.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
