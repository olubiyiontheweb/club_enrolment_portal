@page
@model TheKangaroos_ClubEnrolmentPortal.Pages.Notices.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Notice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Notice.Id" />
            <div class="form-group">
                <label asp-for="Notice.Title" class="control-label"></label>
                <input asp-for="Notice.Title" class="form-control" />
                <span asp-validation-for="Notice.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notice.Description" class="control-label"></label>
                <input asp-for="Notice.Description" class="form-control" />
                <span asp-validation-for="Notice.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Notice.isAnnouncement" /> @Html.DisplayNameFor(model => model.Notice.isAnnouncement)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Notice.isEnquiry" /> @Html.DisplayNameFor(model => model.Notice.isEnquiry)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Notice.Image" class="control-label"></label>
                <input asp-for="Notice.Image" class="form-control" />
                <span asp-validation-for="Notice.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notice.CreatedByClubId" class="control-label"></label>
                <select asp-for="Notice.CreatedByClubId" class="form-control" asp-items="ViewBag.CreatedByClubId"></select>
                <span asp-validation-for="Notice.CreatedByClubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notice.CreatedByUserId" class="control-label"></label>
                <select asp-for="Notice.CreatedByUserId" class="form-control" asp-items="ViewBag.CreatedByUserId"></select>
                <span asp-validation-for="Notice.CreatedByUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
